<div name="Address" id="Address" scroll-spy-event="elementScrolledIntoView" sl-scroll-spy="">
  
  <h2>Benefits</h2>
    
  <div id="sl-address-primary-card" class="sl-primary-card">  
    
    {% if person_ucAward == true or person_esaAward == true %}
      <div class="grid-row benefit-header">    
        <div class="column-one-third">    
          <p><a>Start date</a></p>
        </div>
        <div class="column-one-third">    
          <p><a>Benefit</a></p>
        </div>    
      </div>
      <hr>
    
      {% if person_esaAward == true %}
        <div class="grid-row" id="benefit">
          <div class="column-one-third">    
            <p>3 Mar 2017</p>
          </div>
          <div class="column-one-third">    
            <ul class=" sl-metadata">
              <li><span class="strong">INCOME RELATED ESA</span>&nbsp; 路 &nbsp;<a href="" class="under-link">View benefit details</a></li>
              <li>Current award started 3 Mar 2017&nbsp; 路 &nbsp;<a href="" class="under-link">View awards</a></li>
            </ul>
          </div>
        </div>
      {% endif %}  
    
       {% if person_ucAward == true and person_esaAward == true %}
        <hr>
      {% endif %}  
    
      {% if person_ucAward == true %}
        <div class="grid-row" id="benefit">
          <div class="column-one-third">    
            <p>19 Jan 2010</p>
          </div>
          <div class="column-one-third">    
            <ul class=" sl-metadata">
              <li><span class="strong">UNIVERSAL CREDIT</span>&nbsp; 路 &nbsp;<a href="" class="under-link">View benefit details</a></li>
              <li>Current award started 19 Jan 2010&nbsp; 路 &nbsp;<a href="" class="under-link">View awards</a></li>
            </ul>
          </div>
        </div>
      {% endif %}  

    {% else %}  
      No benefit details held for this customer.
    {% endif %}   
    
  </div>

</div>
