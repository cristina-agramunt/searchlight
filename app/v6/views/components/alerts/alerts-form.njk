<form id="alert-search-form" action="alerts">
  <div class="grid-row">
    <div class="column-one-quarter">
      <div class="form-group prepop">
        <label class="form-label" for="full-name-f1">
          Date of alert
          <span class="form-hint">
            For example 21/10/2018
          </span>
        </label>
        <input class="form-control box-one" id="full-name-f1" type="text" name="full-name-f1" value={{value_1}}>
        <a class="populate-link-one">Use yesterday's date</a>
      </div>
    </div>

    <div class="column-one-quarter" id="benefits">
      <div class="form-group">
